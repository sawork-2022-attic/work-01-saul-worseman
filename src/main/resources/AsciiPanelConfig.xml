<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="AsciiPanel" class="com.example.sawork01.asciipanel.AsciiPanel">
        <constructor-arg index="0" value = "80"/>
        <constructor-arg index="1" value="24"/>
        <constructor-arg index="2" ref="AsciiFont_CP437_16x16"/>
    </bean>

    <bean id="AsciiFont_CP437_9x16" class="com.example.sawork01.asciipanel.AsciiFont">
        <constructor-arg name="filename" value="cp437_9x16.png"/>
        <constructor-arg name="width" value="9"/>
        <constructor-arg name="height" value="16"/>
    </bean>

    <bean id="AsciiFont_CP437_16x16" class="com.example.sawork01.asciipanel.AsciiFont">
        <constructor-arg name="filename" value="cp437_16x16.png"/>
        <constructor-arg name="width" value="16"/>
        <constructor-arg name="height" value="16"/>
    </bean>



</beans>